<h2>List of Movies</h2>
<a href ="/">HOME</a>
<a href ="/movies/create">Create a Movie</a>

<ul>
    {{#each allMovies}}
    <li>
        <p>Title:<a href="/movies/{{_id}}">{{title}}</a></p>
        <p>Genre:{{genre}}</p>
        <p>Plot:{{plot}}</p>
        <p>Cast:</p>
        <ul>
            {{#each cast}}
            <li>{{name}}</li>
            {{/each}}
        </ul>
    </li>
    {{/each}}
</ul>